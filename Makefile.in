INSTALL = @INSTALL@
PREFIX = @prefix@

.PHONY: all msim install uninstall clean distclean
all: msim

msim:
	cd src && $(MAKE)

install: msim
	$(INSTALL) -d $(DESTDIR)$(PREFIX)/bin
	$(INSTALL) -s -m 755 src/msim $(DESTDIR)$(PREFIX)/bin/msim

uninstall:
	rm -f $(PREFIX)/bin/msim

clean:
	cd src && $(MAKE) clean

distclean: clean
	cd src && $(MAKE) distclean
	rm -f Makefile config.log config.status config.h stamp-h
