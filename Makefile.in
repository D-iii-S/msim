INSTALL = @INSTALL@
STRIP = @STRIP@
PREFIX = @prefix@

.PHONY: all msim install uninstall clean distclean
all: msim

msim:
	cd src && $(MAKE)

install: msim
	$(STRIP) src/msim
	$(INSTALL) -d $(PREFIX)/bin
	$(INSTALL) -m 755 -o root src/msim $(PREFIX)/bin/msim

uninstall:
	rm -f $(PREFIX)/bin/msim

clean:
	cd src && $(MAKE) clean

distclean: clean
	cd src && $(MAKE) distclean
	rm -f Makefile config.log config.status config.h stamp-h
